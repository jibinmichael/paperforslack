{
  "display_information": {
    "name": "Paper",
    "description": "Canvas conversation summarizer that creates Granola-style summaries",
    "background_color": "#2c2d30",
    "long_description": "Paper automatically creates and maintains Slack Canvas summaries of your channel conversations in Granola-style format. It intelligently batches messages and uses AI to generate structured summaries with key decisions, action items, and discussion points."
  },
  "features": {
    "app_home": {
      "home_tab_enabled": true,
      "messages_tab_enabled": false,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Paper",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:read",
        "channels:history",
        "chat:write",
        "chat:write.public",
        "app_mentions:read",
        "canvases:write",
        "canvases:read",
        "im:write",
        "mpim:write",
        "groups:read",
        "groups:history"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://paperforslack-pi.vercel.app/api/slack",
      "bot_events": [
        "message.channels",
        "message.groups",
        "app_mention",
        "app_home_opened"
      ]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://paperforslack-pi.vercel.app/api/slack"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
} 